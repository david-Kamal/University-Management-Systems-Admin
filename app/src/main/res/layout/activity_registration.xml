<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".RegistrationActivity">

    <TextView
        android:textSize="25sp"
        android:text="Student Name"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:hint="Insert student's name"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>


    <TextView
        android:textSize="25sp"
        android:text="Age"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:hint="Insert student's age"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>


    <TextView
        android:textSize="25sp"
        android:text="Year"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:hint="Insert student's year"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>




    <TextView
        android:textSize="25sp"
        android:text="E-mail"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:hint="Insert student's e-mail"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>




    <TextView
        android:textSize="25sp"
        android:text="User Name"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:hint="Insert student's username"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>



    <TextView
        android:textSize="25sp"
        android:text="Password"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:hint="Insert student's password"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="50dp"/>

    <Button
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="Submit"
        android:layout_width="150dp"
        android:layout_height="60dp" />





    </LinearLayout>


</ScrollView>
